{
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "eslint.enable": true,
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },
    "vetur.format.defaultFormatter.js": "vscode-typescript",
    "vetur.validation.template": true,
    "vetur.format.defaultFormatter.html": "none",
    "vetur.format.defaultFormatterOptions": {
        "vscode-typescript": {
            "indent_size": 4
        },
        "js-beautify-html": {
            "indent_char": " ",
            "indent_character": " ",
            "indent_inner_html": false,
            "indent_size": 4,
            "indent_with_tabs": false,
            "wrap_attributes": "auto",
            "wrap_line_length": 100
        }
    },
}